<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/fmStart"

    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin" >


    <android.support.v7.widget.CardView
        android:id="@+id/cardData"
        style="@style/Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/CardInside"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.3">

                    <TextView
                        android:id="@+id/device_name_label"
                        style="@style/TextInsideCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="-8dp" />

                    <TextView
                        android:id="@+id/device_name"
                        style="@style/TextInsideCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Switch" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.25">

                    <TextView
                        android:id="@+id/device_type_label"
                        style="@style/TextInsideCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="-8dp" />

                    <TextView
                        android:id="@+id/device_type"
                        style="@style/TextInsideCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Switch" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.45">

                    <TextView
                        android:id="@+id/device_ip_label"
                        style="@style/TextInsideCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IP"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="-8dp" />

                    <TextView
                        android:id="@+id/device_ip"
                        style="@style/TextInsideCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="192.156.43.222" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.3">

                    <TextView
                        android:id="@+id/ticket_number_label"
                        style="@style/TextInsideCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ticket"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="-8dp" />

                    <TextView
                        android:id="@+id/ticket_number"
                        style="@style/TextInsideCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ticket" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.25">

                    <TextView
                        android:id="@+id/rackslot_label"
                        style="@style/TextInsideCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rack Slot"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="-8dp" />

                    <TextView
                        android:id="@+id/rackslot"
                        style="@style/TextInsideCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.45">

                    <TextView
                        android:id="@+id/shelf_label"
                        style="@style/TextInsideCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shelf"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="-8dp" />

                    <TextView
                        android:id="@+id/shelf"
                        style="@style/TextInsideCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardDevicesList"
        style="@style/Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomButtons"
        android:layout_below="@id/cardData"
        app:cardBackgroundColor="@color/card_white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                style="@style/CardInside"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/instructions_field"
                    style="@style/TextInsideCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Repair instructions..." />


            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>


